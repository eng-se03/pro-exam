@model pro_exam.Models.Exam

<div class="container mt-5">
    <h2 class="text-center">Edit Exam</h2>

    <form asp-action="SaveEditExam" method="post" class="mt-4">
        <input asp-for="Id" type="hidden" />
        <div class="form-group">
            <label for="CourseName">Course Name</label>
            <input asp-for="CourseName" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="Day">Day</label>
            <select asp-for="Day" asp-items="@(new SelectList(new[] { "Sunday", "Monday", "Tuesday", "Wednesday", "Thursday" }, Model.Day))" class="form-control" required>
                <option value="">Select Day</option>
            </select>
        </div>
        <div class="form-group">
            <label for="StartExamTime">Start Time</label>
            <input asp-for="StartExamTime" type="time" class="form-control" required />
        </div>
        <div class="form-group">
            <label for="EndExamTime">End Time</label>
            <input asp-for="EndExamTime" type="time" class="form-control" required />
        </div>
        <button type="submit" class="btn btn-success">Save Changes</button>
    </form>
</div>
