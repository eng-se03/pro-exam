@model pro_exam.ViewModel.DoctorScheduleViewModel

<h2>Edit Sunday, Tuesday, Thursday Schedule</h2>
<form asp-action="SaveSundayTuesdayThursday" method="post">
    @Html.HiddenFor(model => model.DoctorId)
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Day</th>
                <th>Start Time</th>
                <th>End Time</th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.SundayTuesdayThursdaySchedules.Count; i++)
            {
                <tr>
                    <td>
                        <select asp-for="SundayTuesdayThursdaySchedules[@i].Day" class="form-control">
                            <option value="Sunday">Sunday</option>
                            <option value="Tuesday">Tuesday</option>
                            <option value="Thursday">Thursday</option>
                        </select>
                    </td>
                    <td>
                        <input asp-for="SundayTuesdayThursdaySchedules[@i].StartTime" type="time" class="form-control" />
                    </td>
                    <td>
                        <input asp-for="SundayTuesdayThursdaySchedules[@i].EndTime" type="time" class="form-control" />
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
