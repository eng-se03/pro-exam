@model IEnumerable<dynamic>

<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Doctors With Schedules</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="wwwroot/css/custom.css" rel="stylesheet"> <!-- ملف CSS المخصص -->
    <!-- رابط Font Awesome للأيقونات -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
    <style>
        /* تخصيص الألوان لجعلها متناسقة مع صفحة Add New Doctor */
        body {
            background-color: #f4f8fc;
            font-family: 'Arial', sans-serif;
        }

        h2 {
            color: #2c3e50;
            font-weight: bold;
        }

        .table {
            background-color: #ffffff;
        }

        .thead-dark {
            background-color: #34495e;
            color: #ffffff;
        }

        .table-hover tbody tr:hover {
            background-color: #ecf0f1;
        }

        .btn-edit {
            color: #ffffff;
            background-color: #3498db;
            border: none;
            padding: 5px 10px;
            border-radius: 3px;
            cursor: pointer;
        }

        .btn-delete {
            color: #ffffff;
            background-color: #e74c3c;
            border: none;
            padding: 5px 10px;
            border-radius: 3px;
            cursor: pointer;
        }

        .btn-edit:hover {
            background-color: #2980b9;
        }

        .btn-delete:hover {
            background-color: #c0392b;
        }
    </style>
</head>

<body>
    <div class="container mt-5">
        <h2 class="text-center mb-4">Doctors with Schedules</h2>

        @if (!Model.Any())
        {
            <div class="alert alert-warning text-center">No data available.</div>
        }
        else
        {
            <table class="table table-bordered table-hover shadow-sm">
                <thead class="thead-dark">
                    <tr>
                        <th>Doctor ID</th>
                        <th>Doctor Name</th>
                        <th>Day</th>
                        <th>Start Time</th>
                        <th>End Time</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var doctor in Model)
                    {
                        foreach (var schedule in doctor.Schedules)
                        {
                            <tr>
                                <td>@doctor.DoctorId</td>
                                <td>@doctor.DoctorName</td>
                                <td>@schedule.Day</td>
                                <td>@schedule.StartTime</td>
                                <td>@schedule.EndTime</td>
                                <td>
                                    <a asp-action="EditSchedule" asp-route-id="@schedule.Id" class="btn btn-link"> <i class="fas fa-edit"></i></a>

                                    <form asp-controller="Doctor" asp-action="DeleteSchedule" asp-route-Id="@schedule.Id" method="post" style="display: inline;" onsubmit="return confirm('هل أنت متأكد من حذف هذا الدكتور؟');">
                                        <button type="submit" class="btn btn-link text-danger">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                            </tr>
                        }

                     
                            <tr>
                                <td>@doctor.DoctorId</td>
                                <td>@doctor.DoctorName</td>
                                <td colspan="4" class="text-center">No schedules available</td>
                            </tr>
                        
                    }
                </tbody>
            </table>
        }
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
